        "CONTRL",
        "IFTSTA",
        "INSRPT",
        "INVOIC",
        "MSCONS",
        "ORDCHG",
        "ORDERS",
        "ORDRSP",
        "PRICAT",
        "QUOTES",
        "REMADV",
        "REQOTE",
        "PARTIN",
